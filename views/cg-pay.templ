    <script>
        (function() {
            const form = document.getElementById('swap-form');
            if (!form) {
                return;
            }

            const dataset = form.dataset;
            const presetReceiveTicker = (dataset.receiveTicker || '').toLowerCase();
            const presetReceiveNetwork = (dataset.receiveNetwork || '').toLowerCase();
            const presetReceiveAmount = dataset.receiveAmount || '';

            const amountInput = document.getElementById('amount');
            const estimatedInput = document.getElementById('estimated-amount');
            const estimatedLabel = document.getElementById('estimated-label');
            const sendCoinLabel = document.getElementById('send-coin-label');
            const receiveCoinLabel = document.getElementById('receive-coin-label');
            const submitButton = document.getElementById('submit-button');
            const modeInput = document.getElementById('mode');
            const receiveSearch = document.getElementById('dropdown-search-receive');
            const receiveSelect = document.getElementById('crypto-receive');
            const networkReceive = document.getElementById('network-receive');
            const sendSearch = document.getElementById('dropdown-search-send');

            if (amountInput) {
                amountInput.value = '';
            }

            estimatedInput.classList.add('pay-mode');
            estimatedInput.readOnly = true;
            estimatedInput.placeholder = 'Invoice amount';
            estimatedInput.type = 'number';
            estimatedInput.min = '0';
            estimatedInput.step = 'any';
            estimatedInput.required = true;
            estimatedInput.value = presetReceiveAmount;
            estimatedInput.name = 'amount';
            if (estimatedLabel) {
                estimatedLabel.textContent = 'Recipient Gets';
            }

            sendCoinLabel.textContent = 'Pay With';
            receiveCoinLabel.textContent = 'Recipient Coin';
            submitButton.textContent = 'Pay Invoice';
            modeInput.value = 'pay';
            networkReceive.value = dataset.receiveNetwork || networkReceive.value;
            receiveSearch.readOnly = true;
            if (sendSearch) {
                sendSearch.readOnly = true;
            }

            const modal = document.getElementById('coin-selection-modal');
            const modalSearch = document.getElementById('modal-search');
            const modalOptions = document.getElementById('modal-options');
            let currentSelectElement = null;
            let activeOptionIndex = 0;
            let coinsData = [];

            function applyInputIcon(field, iconUrl) {
                if (!field) {
                    return;
                }
                if (iconUrl) {
                    field.style.backgroundImage = `url(${iconUrl})`;
                    field.style.backgroundRepeat = 'no-repeat';
                    field.style.backgroundPosition = 'left 10px center';
                    field.style.backgroundSize = '20px 20px';
                    field.style.paddingLeft = '40px';
                    field.classList.add('has-icon');
                } else {
                    field.style.backgroundImage = '';
                    field.style.paddingLeft = '';
                    field.classList.remove('has-icon');
                }
            }

            function updateNetworkFields(type, network) {
                if (type === 'send') {
                    document.getElementById('network-send').value = network || '';
                }
            }

            function openModal(selectElement) {
                currentSelectElement = selectElement;
                modal.classList.remove('hidden');
                modalSearch.value = '';
                filterModalOptions();
                setTimeout(() => modalSearch.focus(), 0);
                activeOptionIndex = 0;
            }

            function closeModal() {
                modal.classList.add('hidden');
            }

            function filterModalOptions() {
                const filter = modalSearch.value.toLowerCase();
                const options = modalOptions.querySelectorAll('div');
                let firstVisible = null;

                options.forEach((option, idx) => {
                    const matches = option.dataset.text.includes(filter);
                    option.style.display = matches ? 'flex' : 'none';
                    option.classList.remove('active-option');
                    if (matches && !firstVisible) {
                        firstVisible = { element: option, index: idx };
                    }
                });

                if (firstVisible) {
                    firstVisible.element.classList.add('active-option');
                    activeOptionIndex = firstVisible.index;
                }
            }

            function selectOption(optionDiv) {
                if (!optionDiv || optionDiv.style.display === 'none') {
                    return;
                }

                const ticker = optionDiv.dataset.ticker;
                const network = optionDiv.dataset.network;
                const displayText = optionDiv.dataset.display;
                const icon = optionDiv.dataset.icon;

                currentSelectElement.value = ticker;

                const suffixParts = currentSelectElement.id.split('-');
                const suffix = suffixParts[suffixParts.length - 1];
                const inputField = document.getElementById(`dropdown-search-${suffix}`);
                const selectElement = document.getElementById(`crypto-${suffix}`);

                if (inputField) {
                    inputField.value = displayText;
                    applyInputIcon(inputField, icon);
                }

                if (selectElement) {
                    selectElement.innerHTML = `<option value="${ticker}" selected>${displayText}</option>`;
                    selectElement.classList.add('hidden');
                }

                updateNetworkFields(suffix, network);
                closeModal();
            }

            function createModalOptions(jsonData) {
                // Only include coins that have cg-pay enabled. Support both `cg-pay` and `cgPay` keys.
                const filteredData = Array.isArray(jsonData)
                    ? jsonData.filter(item => item && (item['cg-pay'] === true || item.cgPay === true))
                    : [];

                coinsData = filteredData;
                modalOptions.innerHTML = '';

                filteredData.forEach((item, index) => {
                    const displayText = item.network ? `${item.name} (${item.network.toUpperCase()})` : item.name;
                    const displayTextWithTicker = `${displayText} (${item.ticker})`;

                    const optionDiv = document.createElement('div');
                    const iconMarkup = item.icon ? `<span class="coin-icon-wrapper"><img src="${item.icon}" alt="${item.name} icon"></span>` : '';
                    optionDiv.innerHTML = `${iconMarkup}${displayText}`;
                    optionDiv.dataset.ticker = item.ticker;
                    optionDiv.dataset.network = item.network || '';
                    optionDiv.dataset.display = displayText;
                    optionDiv.dataset.text = displayTextWithTicker.toLowerCase();
                    optionDiv.dataset.icon = item.icon || '';
                    optionDiv.addEventListener('click', () => selectOption(optionDiv));

                    if (index === 0) {
                        optionDiv.classList.add('active-option');
                        activeOptionIndex = 0;
                    }

                    modalOptions.appendChild(optionDiv);
                });

                setDefaultSendCoin(filteredData);
                setPresetReceiveCoin(filteredData);
                filterModalOptions();
            }

            function setDefaultSendCoin(jsonData) {
                const defaultSendCoin = 'btc';
                const match = jsonData.find(item => item.ticker.toLowerCase() === defaultSendCoin);
                if (!match) {
                    return;
                }

                const displayText = match.network ? `${match.name} (${match.network.toUpperCase()})` : match.name;
                const selectSend = document.getElementById('crypto-send');
                selectSend.value = match.ticker;

                let option = selectSend.querySelector(`option[value="${match.ticker}"]`);
                if (!option) {
                    option = document.createElement('option');
                    option.value = match.ticker;
                    option.textContent = displayText;
                    option.selected = true;
                    selectSend.appendChild(option);
                } else {
                    option.selected = true;
                }

                if (sendSearch) {
                    sendSearch.value = displayText;
                    applyInputIcon(sendSearch, match.icon);
                }

                updateNetworkFields('send', match.network);
            }

            function setPresetReceiveCoin(jsonData) {
                const receiveInput = document.getElementById('dropdown-search-receive');
                const receiveSelect = document.getElementById('crypto-receive');
                const fallbackTicker = (dataset.receiveTicker || '').toUpperCase();

                const preset = jsonData.find(item => {
                    const tickerMatches = item.ticker.toLowerCase() === presetReceiveTicker;
                    const networkMatches = presetReceiveNetwork === '' || (item.network || '').toLowerCase() === presetReceiveNetwork;
                    return tickerMatches && networkMatches;
                }) || jsonData.find(item => item.ticker.toLowerCase() === presetReceiveTicker);

                if (preset) {
                    const displayText = preset.network ? `${preset.name} (${preset.network.toUpperCase()})` : preset.name;

                    receiveInput.value = displayText;
                    applyInputIcon(receiveInput, preset.icon);

                    receiveSelect.innerHTML = `<option value="${preset.ticker}" selected>${displayText}</option>`;
                    networkReceive.value = preset.network || dataset.receiveNetwork || '';
                } else {
                    receiveInput.value = fallbackTicker;
                    applyInputIcon(receiveInput, null);
                    receiveSelect.innerHTML = `<option value="${dataset.receiveTicker || ''}" selected>${fallbackTicker}</option>`;
                    networkReceive.value = dataset.receiveNetwork || '';
                }
            }

            async function loadCoins() {
                try {
                    const response = await fetch('/static/coins.json');
                    const jsonData = await response.json();
                    createModalOptions(jsonData);
                } catch (error) {
                    console.error('Error loading coins:', error);
                }
            }

            function updateSendAmountFromEstimate() {
                const amountField = document.getElementById('amount');
                if (!amountField) {
                    return;
                }

                const estimateForms = document.querySelectorAll('.estimate-form-estimates');
                if (!estimateForms || estimateForms.length === 0) {
                    return;
                }

                const firstForm = estimateForms[0];
                const amountElement = firstForm.querySelector('.amount-highlight-estimates');
                if (!amountElement) {
                    return;
                }

                let estimatedAmount = amountElement.textContent.trim();
                const parts = estimatedAmount.split(' ');
                if (parts.length >= 2) {
                    estimatedAmount = parts[0];
                }

                amountField.value = estimatedAmount;
                amountField.dispatchEvent(new Event('change', { bubbles: true }));
            }

            loadCoins();

            if (sendSearch) {
                sendSearch.addEventListener('click', () => openModal(document.getElementById('crypto-send')));
            }

            modal.addEventListener('click', event => {
                if (event.target === modal) {
                    closeModal();
                }
            });

            modalSearch.addEventListener('keydown', function(e) {
                const visibleOptions = Array.from(modalOptions.querySelectorAll('div')).filter(opt => opt.style.display !== 'none');

                if (e.key === 'Enter') {
                    e.preventDefault();
                    if (visibleOptions.length > 0) {
                        selectOption(visibleOptions[activeOptionIndex] || visibleOptions[0]);
                    }
                } else if (e.key === 'ArrowDown' || e.key === 'ArrowUp') {
                    e.preventDefault();
                    if (visibleOptions.length === 0) {
                        return;
                    }
                    visibleOptions.forEach(opt => opt.classList.remove('active-option'));
                    const direction = e.key === 'ArrowDown' ? 1 : -1;
                    activeOptionIndex = (activeOptionIndex + direction + visibleOptions.length) % visibleOptions.length;
                    const target = visibleOptions[activeOptionIndex];
                    target.classList.add('active-option');
                    target.scrollIntoView({ block: 'nearest' });
                } else if (e.key === 'Escape') {
                    closeModal();
                }
            });

            modalSearch.addEventListener('keyup', function(e) {
                if (e.key === 'Enter' || e.key === 'ArrowDown' || e.key === 'ArrowUp' || e.key === 'Escape') {
                    return;
                }
                filterModalOptions();
            });

            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
                    closeModal();
                }
            });

            form.addEventListener('submit', function() {
                document.getElementById('crypto-send').classList.remove('hidden');
                receiveSelect.classList.remove('hidden');
            });

            document.addEventListener('htmx:beforeRequest', function() {
                const spinner = document.getElementById('loading-spinner');
                if (spinner) {
                    spinner.classList.remove('spinner-hidden');
                }
                const errorMessage = document.getElementById('error-message');
                if (errorMessage) {
                    errorMessage.classList.add('hidden');
                }
            });

            document.addEventListener('htmx:afterSwap', function() {
                const spinner = document.getElementById('loading-spinner');
                if (spinner) {
                    spinner.classList.add('spinner-hidden');
                }
                updateSendAmountFromEstimate();
            });

            document.addEventListener('estimatesSorted', updateSendAmountFromEstimate);

            const estimateContainer = document.getElementById('estimate-container');
            if (estimateContainer) {
                const observer = new MutationObserver(() => {
                    setTimeout(updateSendAmountFromEstimate, 50);
                });
                observer.observe(estimateContainer, { childList: true, subtree: true });
            }

            document.addEventListener('htmx:responseError', function(event) {
                const spinner = document.getElementById('loading-spinner');
                if (spinner) {
                    spinner.classList.add('spinner-hidden');
                }

                const errorMessage = document.getElementById('error-message');
                const errorText = document.getElementById('error-text');
                if (errorMessage && errorText) {
                    const responseText = event.detail && event.detail.xhr && event.detail.xhr.responseText
                        ? event.detail.xhr.responseText
                        : 'An error occurred while fetching the estimate.';
                    errorText.textContent = responseText;
                    errorMessage.classList.remove('hidden');
                }
            });
        })();
    </script>

