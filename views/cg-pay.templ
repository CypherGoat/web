templ CGPayForm(toCoin string, toNetwork string, toAmount float64, toAddress string, errStr string) {
    // @IndexHeader(){}
    
    <style>
        :root {
            --bg-color: #111624;
            --card-color: #191f2d;
            --button-color: #0d74ff;
            --text-color: #e0e0e0;
